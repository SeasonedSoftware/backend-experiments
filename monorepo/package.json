{
  "name": "monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Demo application showing how to share code between NextJS projects in a monorepo",
  "workspaces": [
    "ui",
    "domain-logic",
    "jobs"
  ],
  "scripts": {
    "dev:ui": "yarn workspace ui dev",
    "dev:jobs": "yarn workspace jobs dev",
    "dev:domain": "yarn workspace domain-logic dev",
    "lint:eslint": "eslint ./",
    "lint:prettier": "prettier --check \"{**/*.js,**/*.jsx,**/*.ts,**/*.tsx}\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "15.0.2",
    "@types/react": "17.0.5",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "next-transpile-modules": "^7.1.1",
    "prettier": "^2.3.0",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "fp-ts": "^2.10.5"
  }
}
